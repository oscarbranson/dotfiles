keywords = {Animals,Ants,Ants: physiology,Behavior, Animal,Walking,Walking: physiology},
number = {Pt 16},
pages = {2499--509},
pmid = {12124373},
title = {{View-based navigation in insects: how wood ants (Formica rufa L.) look at and are guided by extended landmarks.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/12124373},
volume = {205},
year = {2002}
}
@article{Cody1993,
