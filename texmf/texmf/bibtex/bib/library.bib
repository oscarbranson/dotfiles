journal = {Mar. Ecol. Prog. Ser.},
keywords = {Adult habitat,Connectivity,Estuary,Movement,Nursery habitat,Open coast,Review,Spatial scale,Temporal scale},
pages = {281--295},
pmid = {5762654},
title = {{Evidence of connectivity between juvenile and adult habitats for mobile marine fauna: An important component of nurseries}},
