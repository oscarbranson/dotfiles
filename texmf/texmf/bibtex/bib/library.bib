doi = {10.2138/am.2011.3665},
file = {:home/oscar/CamDrive/Biblio/Titschack, Goetz-Neunhoeffer, Neubauer/Titschack, Goetz-Neunhoeffer, Neubauer - 2011 - American Mineralogist.pdf:pdf},
