issn = {00167037},
journal = {Geochim. Cosmochim. Acta},
keywords = {Core-top,Culture,Lithium isotopes,pH},
pages = {336--350},
publisher = {Elsevier Ltd},
title = {{Lithium isotopic composition of benthic foraminifera: A new proxy for paleo-pH reconstruction}},
