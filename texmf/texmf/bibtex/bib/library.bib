doi = {10.1016/S0967-0645(02)00018-8},
file = {:home/oscar/CamDrive/Biblio/Anderson et al/Anderson et al. - 2002 - Deep-Sea Research Part II Topical Studies in Oceanography.pdf:pdf},
isbn = {0967-0645},
issn = {09670645},
journal = {Deep. Res. Part II Top. Stud. Oceanogr.},
