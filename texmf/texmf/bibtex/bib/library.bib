author = {DePaolo, Donald J.},
doi = {10.1016/j.gca.2010.11.020},
file = {:home/oscar/CamDrive/Biblio/DePaolo/DePaolo - 2011 - Geochimica et Cosmochimica Acta(4).pdf:pdf},
isbn = {0016-7037},
issn = {00167037},
journal = {Geochim. Cosmochim. Acta},
