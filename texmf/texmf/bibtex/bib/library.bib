arxivId = {NIHMS150003},
author = {Gower, Laurie B.},
doi = {10.1021/cr800443h},
eprint = {NIHMS150003},
file = {:home/oscar/CamDrive/Biblio/Gower/Gower - 2008 - Chemical Reviews.pdf:pdf},
