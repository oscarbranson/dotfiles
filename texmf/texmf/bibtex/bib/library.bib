doi = {10.1098/rspb.1994.0085},
file = {:home/oscar/CamDrive/Biblio/Sendova-Franks, Franks/Sendova-Franks, Franks - 1994 - Proceedings of the Royal Society B Biological Sciences.pdf:pdf},
