author = {Hu, Q. and Nielsen, M. H. and Freeman, C. L. and Hamm, L. M. and Tao, J. and Lee, J. R. I. and Han, T. Y. J. and Becker, U. and Harding, J. H. and Dove, P. M. and {De Yoreo}, J. J.},
doi = {10.1039/c2fd20124k},
eprint = {arXiv:1011.1669v3},
file = {:home/oscar/CamDrive/Biblio/Hu et al/Hu et al. - 2012 - Faraday Discussions(2).pdf:pdf},
isbn = {1359-6640},
issn = {1359-6640},
journal = {Faraday Discuss.},
