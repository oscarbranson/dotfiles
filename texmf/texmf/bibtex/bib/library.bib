journal = {J. Sediment. Res.},
number = {6},
pages = {363--376},
title = {{Calcite and Aragonite Precipitation Under Controlled Instantaneous Supersaturation: Elucidating the Role of CaCO3 Saturation State and Mg/Ca Ratio on Calcium Carbonate Polymorphism}},
