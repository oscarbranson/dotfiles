isbn = {0027-8424 (Print)$\backslash$r0027-8424 (Linking)},
issn = {00278424},
journal = {Proc Natl Acad Sci U S A},
keywords = {Prokaryotic Cells/*classification/*physiology},
number = {12},
pages = {6578--6583},
pmid = {9618454},
title = {{Prokaryotes: the unseen majority}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/9618454},
volume = {95},
year = {1998}
