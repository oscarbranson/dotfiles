journal = {Conserv. Biol.},
keywords = {Climate change,Coral bleaching,Coral reef ecosystems,Coral reef fishes,Coral reef resilience,Marine protected areas,Size spectra analysis},
number = {5},
pages = {1291--1300},
pmid = {17883494},
title = {{Lag effects in the impacts of mass coral bleaching on coral reef fish, fisheries, and ecosystems}},
volume = {21},
year = {2007}
}
