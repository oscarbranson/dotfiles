isbn = {0272-7714},
issn = {02727714},
journal = {Estuar. Coast. Shelf Sci.},
keywords = {Puget Sound,benthic organisms,estuarine coasts,estuarine hydrodynamics,salinity gradient,sampling designs,temperature gradient,wave energy},
