doi = {10.1038/nature02808},
file = {:home/oscar/CamDrive/Biblio/Edwards, Richardson, Martin Edwards {\&} Anthony J. Richardson/Edwards, Richardson, Martin Edwards {\&} Anthony J. Richardson - 2004 - Nature.pdf:pdf},
