doi = {10.1016/S0016-7037(02)01113-4},
file = {:home/oscar/CamDrive/Biblio/James, Allen, Seyfried/James, Allen, Seyfried - 2003 - Geochimica et Cosmochimica Acta.pdf:pdf},
