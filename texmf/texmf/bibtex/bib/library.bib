author = {Richter, Frank M. and Liang, Yan},
doi = {10.1016/0012-821X(93)90102-F},
file = {:home/oscar/CamDrive/Biblio/Richter, Liang/Richter, Liang - 1993 - Earth and Planetary Science Letters.pdf:pdf},
