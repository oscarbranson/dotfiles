journal = {Front. Microbiol.},
keywords = {Alkaline Phosphatase,Emiliania huxleyi,Nitrate Reductase,Nutrients,calcification,ocean acidification,strain variability},
number = {JUN},
pages = {155},
pmid = {23785363},
title = {{The effect of nitrate and phosphate availability on Emiliania huxleyi (NZEH) physiology under different CO2 scenarios}},
