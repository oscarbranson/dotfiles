keywords = {Amide bonds,Amino acid-based surfactants,Betaine,Chelating surfactants,Chiral aggregates,Cysteine,Dicarboxylic amino acids,Self-assembly},
pages = {79--91},
pmid = {25846628},
publisher = {Elsevier B.V.},
