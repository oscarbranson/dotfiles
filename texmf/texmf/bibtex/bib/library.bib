file = {:home/oscar/CamDrive/Biblio/Rae et al/Rae et al. - 2011 - Earth and Planetary Science Letters.pdf:pdf},
isbn = {0012-821X},
issn = {0012821X},
journal = {Earth Planet. Sci. Lett.},
keywords = {B/Ca,Boron isotopes,Foraminifera,PH,Pore water,Proxy},
number = {3-4},
