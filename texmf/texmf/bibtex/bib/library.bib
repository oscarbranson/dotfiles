keywords = {Aerial exposure,Air-breathing teleosts,Ammonia,Ammoniotelism,Amphibious,Environmental constraints,Heteropneustes fossilis,Hyper-ammonia stress,Urea,Urea cycle,Ureogenesis,Ureotelism},
