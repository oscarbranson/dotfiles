doi = {10.1038/ismej.2007.112},
file = {:home/oscar/CamDrive/Biblio/Bourne et al/Bourne et al. - 2008 - The ISME Journal.pdf:pdf},
isbn = {1751-7362 (Print)$\backslash$r1751-7362 (Linking)},
issn = {1751-7362},
journal = {ISME J.},
keywords = {Great Barrier Reef,Subject Category,bacteria,bleaching,coral},
