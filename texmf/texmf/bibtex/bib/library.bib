file = {:home/oscar/CamDrive/Biblio/Latham, Wilson/Latham, Wilson - 2008 - Molecular Plant Pathology.pdf:pdf},
isbn = {1364-3703 (Electronic)$\backslash$n1364-3703 (Linking)},
issn = {14646722},
journal = {Mol. Plant Pathol.},
number = {1},
pages = {85--103},
pmid = {18705887},
title = {{Transcomplementation and synergism in plants: Implications for viral transgenes?}},
volume = {9},
year = {2008}
}
