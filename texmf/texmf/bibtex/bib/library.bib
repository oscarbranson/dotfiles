file = {:home/oscar/CamDrive/Biblio/Planchon et al/Planchon et al. - 2013 - Geochimica et Cosmochimica Acta.pdf:pdf},
isbn = {0016-7037},
issn = {00167037},
journal = {Geochim. Cosmochim. Acta},
pages = {374--397},
title = {{Mg-isotopic fractionation in the manila clam (Ruditapes philippinarum): New insights into Mg incorporation pathway and calcification process of bivalves}},
volume = {121},
year = {2013}
}
@article{Elzenga2000,
