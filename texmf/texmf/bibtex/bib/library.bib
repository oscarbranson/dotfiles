file = {:home/oscar/Biblio/Knoll/Knoll - 2003 - Reviews in Mineralogy and Geochemistry.pdf:pdf},
issn = {1529-6466},
journal = {Rev. Mineral. Geochemistry},
number = {1},
pages = {329--356},
title = {{Biomineralization and Evolutionary History}},
volume = {54},
year = {2003}
}
@article{Kelly2007a,
