pages = {1--5},
publisher = {Elsevier B.V.},
title = {{Direct measurement of the boron isotope fractionation factor: Reducing the uncertainty in reconstructing ocean paleo-pH}},
url = {http://dx.doi.org/10.1016/j.epsl.2015.01.006},
volume = {414},
year = {2015}
