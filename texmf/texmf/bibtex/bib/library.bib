journal = {Am. Mineral.},
keywords = {borate,boron isotopes,constraints,crystal,exchange,marine,nuclear magnetic-resonance},
number = {9-10},
pages = {819--825},
title = {{Coordination Environments of B-Impurities in Calcite and Aragonite Polymorphs - a B-11 Mas Nmr-Study}},
volume = {79},
year = {1994}
}
@article{Reinhardt2005,
