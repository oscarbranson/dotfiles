file = {:home/oscar/Biblio/Cohen/Cohen - 2003 - Reviews in Mineralogy and Geochemistry.pdf:pdf},
issn = {1529-6466},
journal = {Rev. Mineral. Geochemistry},
number = {1},
pages = {151--187},
title = {{Geochemical Perspectives on Coral Mineralization}},
volume = {54},
year = {2003}
