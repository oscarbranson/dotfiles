title = {{Biomineralization: from biology to biotechnology and medical application}},
url = {http://dx.doi.org/10.1002/1521-3757(20010917)113:18{\%}3C3588::AID-ANGE3588{\%}3E3.0.CO{\%}5Cn2-L},
