isbn = {1365-2486},
issn = {13541013},
journal = {Glob. Chang. Biol.},
keywords = {Dinoflagellate,Ocean acidification,Phosphoglycolate phosphatase,Photoprotection,Photorespiration,Scleractinian coral},
number = {2},
pages = {851--863},
title = {{The effect of ocean acidification on symbiont photorespiration and productivity in Acropora formosa}},
volume = {16},
year = {2010}
}
