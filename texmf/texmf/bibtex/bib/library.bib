file = {:home/oscar/CamDrive/Biblio/Quill{\'{e}}v{\'{e}}r{\'{e}} et al/Quill{\'{e}}v{\'{e}}r{\'{e}} et al. - 2008 - Earth and Planetary Science Letters.pdf:pdf},
isbn = {0012-821X},
