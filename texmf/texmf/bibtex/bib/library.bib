isbn = {0012-821X},
issn = {0012821X},
journal = {Earth Planet. Sci. Lett.},
keywords = {Carbon cycle,Climate,Paleo-oceanography,Paleocirculation,Paleoclimatology,Sea-surface temperature},
number = {1},
pages = {1--13},
pmid = {2197},
title = {{New oceanic proxies for paleoclimate}},
volume = {203},
year = {2002}
}
