isbn = {0091-7613},
issn = {00917613},
journal = {Geology},
number = {11},
pages = {1039--1042},
title = {{Modern and late pleistocene B/Ca ratios of the benthic foraminifer Planulina wuellerstorfidetermined with laser ablation ICP-MS}},
volume = {39},
year = {2011}
}
