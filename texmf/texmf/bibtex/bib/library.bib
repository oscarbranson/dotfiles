issn = {1469-185X},
journal = {Biol. Rev.},
keywords = {age,allometry,development time,evolutionary developmental biology,growth,heterochrony,morphometrics,ontogeny,paedomorphosis,peramorphosis,shape,size},
number = {1},
pages = {79--123},
pmid = {9569772},
title = {{Heterochrony and allometry: the analysis of evolutionary change in ontogeny}},
