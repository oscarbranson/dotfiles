file = {:home/oscar/CamDrive/Biblio/Collett/Collett - 1996 - The Journal of experimental biology.pdf:pdf},
isbn = {0022-0949},
issn = {1477-9145},
journal = {J. Exp. Biol.},
keywords = {dead reckoning,hymenoptera,landmarks,navigation},
pages = {227--35},
