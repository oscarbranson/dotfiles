journal = {Development},
keywords = {cell differentiation,development,epidermis,pattern formation,root,transcriptional regulation},
number = {1},
pages = {6431--6439},
pmid = {14627722},
title = {{The bHLH genes GLABRA3 (GL3) and ENHANCER OF GLABRA3 (EGL3) specify epidermal cell fate in the Arabidopsis root.}},
volume = {130},
year = {2003}
