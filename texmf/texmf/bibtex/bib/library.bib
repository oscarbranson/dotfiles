file = {:home/oscar/CamDrive/Biblio/Bazylinski, Frankel/Bazylinski, Frankel - 2003 - Reviews in Mineralogy and Geochemistry.pdf:pdf},
isbn = {1529-6466$\backslash$r0-93995-066-9},
