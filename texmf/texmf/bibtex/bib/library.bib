isbn = {0016-7037},
issn = {00167037},
journal = {Geochim. Cosmochim. Acta},
number = {15},
pages = {2819--2826},
pmid = {795},
title = {{CaCO3 precipitation kinetics in waters from the Great Bahama Bank: Implications for the relationship between Bank hydrochemistry and whitings}},
volume = {67},
year = {2003}
}
