pages = {865--880},
pmid = {846037},
title = {{Proteus and Proto-Oceanus : Ancestral Paleogene Oceans As Revealed From Antarctic Stable Isotopic Results ; Odp Leg 113}},
volume = {113},
year = {1990}
}
