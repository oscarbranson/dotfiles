doi = {10.1029/2006GC001564},
file = {:home/oscar/CamDrive/Biblio/Groeneveld et al/Groeneveld et al. - 2008 - Geochemistry, Geophysics, Geosystems.pdf:pdf},
isbn = {1525-2027},
issn = {15252027},
journal = {Geochemistry, Geophys. Geosystems},
keywords = {Mg/Ca paleothermometry,Panamanian Gateway,Planktonic foraminifers,Pliocene},
number = {1},
pages = {1--21},
title = {{Foraminiferal Mg/Ca increase in the Caribbean during the Pliocene: Western Atlantic Warm Pool formation, salinity influence, or diagenetic overprint?}},
