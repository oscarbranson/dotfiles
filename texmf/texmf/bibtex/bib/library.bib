doi = {10.1073/pnas.0600605103},
file = {:home/oscar/CamDrive/Biblio/Tcherkez, Farquhar, Andrews/Tcherkez, Farquhar, Andrews - 2006 - Proceedings of the National Academy of Sciences of the United States of America.pdf:pdf},
isbn = {0027-8424},
issn = {0027-8424},
journal = {Proc. Natl. Acad. Sci. U. S. A.},
keywords = {Carbon Dioxide,Carbon Dioxide: metabolism,Catalysis,Ketones,Ketones: chemistry,Ketones: metabolism,Kinetics,Molecular Structure,Oxygen,Oxygen: metabolism,Ribulose-Bisphosphate Carboxylase,Ribulose-Bisphosphate Carboxylase: metabolism,Substrate Specificity,Water,Water: metabolism},
number = {19},
pages = {7246--51},
pmid = {16641091},
title = {{Despite slow catalysis and confused substrate specificity, all ribulose bisphosphate carboxylases may be nearly perfectly optimized.}},
